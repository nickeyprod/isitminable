extends ./../layout

block head 
  link(href="/css/main.css" rel="stylesheet")
  link(href="/css/admin/add_project.css" rel="stylesheet")
  script(src="/js/admin/edit_project.js")
  script(src="/js/index.js")

block content
  .main-content
    h2 Редактировать проект
    .project-data 
      label(for="name") Название:
      input(type="text" name="name" id="proj-name-inpt" value=project.name)
      label(for="name") Тикер:
      input(type="text" name="ticker" id="proj-ticker-inpt" value=project.ticker)
      label(for="link") Сайт проекта:
      input(type="text" name="link" id="proj-link-inpt" value=project.link)
      input#proj-id-inpt(type="hidden" value=project._id) 
      button.add-proj-btn#save-proj-btn Сохранить